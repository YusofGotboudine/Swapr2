<div class="container mr-5 ml-5">

    <% @products.each do |product| %>
        
        <div class = 'card'>
        <div class='card-body' style='text-align:center;'><%= product.name %></div>
        <p class= 'card-text' style='text-align:center;'><%= link_to product.user.email, profile_path(product.user.id) %></p>
        <div class = 'text-center'><%= image_tag (product.img_url), style: 'width: 200px; height: 170px' %></div>
        <p class= 'card-text mt-2' style='text-align:center;'><%= product.description %></p>
        <p class= 'card-text mt-2 mb-2' style='text-align:center;'><%= link_to 'View', product_path(product) %></p>

        </div>
        
    <%end%>
    </div>

