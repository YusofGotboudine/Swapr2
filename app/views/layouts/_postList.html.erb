<div class="container mr-5 ml-5">

    <% @posts.each do |post| %>
        
        <div class = 'card'>
        <div class='card-body' style='text-align:center;'><%= post.title %> by <%= link_to post.user.email, profile_path(post.user.id) %></div>
        <p class= 'card-text mt-2' style='text-align:center;'><%= post.content %></p>
        <p class= 'card-text mt-2 mb-2' style='text-align:center;'><%= link_to 'View', post_path(post) %></p>

        </div>
        
    <%end%>
    </div>

