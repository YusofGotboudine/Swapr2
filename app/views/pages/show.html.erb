<% if user_signed_in? %>
<%= render 'layouts/navbar1' %>
<% else %>
<%= render 'layouts/navbar' %>
<%end%>


<p id="notice"><%= notice %></p>

<br/>

<% if @users == current_user %>
    <h4 style = 'text-align:center;'>Your profile </h4>
    <br/>
    <h6 style = 'text-align:center;'>Offers you've made</h6>
    <%= render 'layouts/offerMadeList' %>
    <br/>
    <h6 style = 'text-align:center;'>Offers you've received</h6>
    <%= render 'layouts/offerReceiveList' %>

<% else %>
    <h4 style = 'text-align:center;'><%= @users.email %>'s profile </h4>
    <br/>
<% end %>

<br/>

<% if @users == current_user %>
    <h6 style = 'text-align:center;'>Your listings </h6>
<% else %>
    <h6 style = 'text-align:center;'><%= @users.email %>'s listings </h6>
<% end %>

<div class="container mr-5 ml-5">

    <% @products.each do |product| %>
    
        <div class = 'card'>
        <div class='card-body' style='text-align:center;'><%= product.name %></div>
        <div class = 'text-center'><%= image_tag (product.img_url), style: 'width: 200px; height: 170px' %></div>
        <p class= 'card-text mt-2' style='text-align:center;'><%= product.description %></p>
        <p class= 'card-text mt-2 mb-2' style='text-align:center;'><%= link_to 'View', product_path(product) %></p>
        <%end%>
        </div>
</div>




